<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/generator.css" />
  <link rel="stylesheet" href="/styles/layout.css" />


  <!-- External Google Font ABeeZee -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap"
    rel="stylesheet">

  <!-- External Google Font Alata -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap"
    rel="stylesheet">

  <!-- Font Awesome Icon CDN CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Nav CSS -->
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />

  <!-- Main Page CSS -->
  <link rel="stylesheet" href="/styles/generator.css" type="text/css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/generator.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <main>
      <h3>Generate Password</h3>
      <section>
        <input type="text" id="result">
      <button id="copy" onclick="copy()"><i class="fa-solid fa-copy"></i></button>
      <button class="generate-btn" id="generate"><i class="fa-solid fa-rotate-right"></i></button>
    </section>
    <h4>Options</h4>
    <form class="options">
      <label>
      <h5>UPPERCASE </h5>
      <input type="checkbox" id="uppercase" name="uppercase" checked >
       </label>
       <label>
       <h5>LOWERCASE </h5>
      <input type="checkbox" id="lowercase" name="lowercase"  checked >
       </label>
       <label>
       <h5>NUMBERS </h5>
       <input type="checkbox" id="numbers" name="numbers" checked  >
       </label>
       <label>
      <h5>SYMBOLS </h5>
       <input type="checkbox" id="symbols" name="symbols" checked  >
       </label>
       <label>
        <h5>LENGTH  (4-20) </h5>
        <input type="range" id="length" min="4" max="20" step="1">
        <span id="length-result"></span>
      </label>
    </form>
  </main>
</body>
</html>
